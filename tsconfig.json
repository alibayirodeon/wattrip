{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-native",
    "types": ["nativewind/types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
